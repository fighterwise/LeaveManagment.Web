<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeaveManagment.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeaveManagment.Web.styles.css" asp-append-version="true" />
   <style > img {
     width: 100px;
    border-radius: 30px;
    float: left;
}



</style >
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3  " >
            <a href="@Url.Action("Index", "Home")" class="navbar-brand" >
             <img src="~/lib/logo1.PNG" height=50 width=150 title="title" alt="Home Page" />

            </a>

            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Leave Managment Web Net - 6.0</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-contrreols="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-lg-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white-70" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white-70" asp-area="" asp-controller="" asp-action="">Applay For Leave</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link border-white text-white-70" asp-area="" asp-controller="Home" asp-action="Privacy">My Leave</a>
                        </li>
                                <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#"  role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Leave Managment
                                </a>
                                
                                <ul class="dropdown-menu bg-black" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item bg-gradient bg-black text-white" asp-controller="LeaveTypes" asp-action="Index">Leave Types</a></li>
                                <li><a class="dropdown-item bg-black text-white" href="~/lib/bootstrap/dist/css/bootstrap.min.css">Leave Allocations</a></li>
                                <li><hr class="dropdown-divider bg-gradient bg-black text-white"></li>
                                <li><a class="dropdown-item bg-black text-white" href="~/lib/bootstrap/dist/css/bootstrap.min.css">Leave Requests</a></li>
                                <li><a class="dropdown-item bg-black text-white" href="~/lib/bootstrap/dist/css/bootstrap.min.css">Employee Managment</a></li>
                                </ul>
                         </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - LeaveManagment.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
